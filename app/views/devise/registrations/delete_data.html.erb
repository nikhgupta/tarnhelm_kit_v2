<h2 class="heading">Edit User Account</h2>

<div class="flex flex-row">
    <%= render partial: "devise/registrations/navigation" %>
    <div class="mb-10 max-w-screen-sm w-full">
        <div class="flex flex-col">
            <p class="text-xl mb-5 text-error font-bold">
                You are about to permanently destroy any data related to:
            </p>
            <ul class="mb-10 font-bold">
                <li>- You</li>
                <li>- Your Personal Account</li>
                <%- if current_user.enabled?(:user_accounts) %>
                    <%- current_user.accounts.where(personal: false).each do |account| %>
                        <li>- Account named <strong><%= account.name %></strong></li>
                    <%- end %>
                <%- end %>
            </ul>
        </div>

        <%= button_to "Delete My Data", registration_path(resource_name),
                data: { confirm: "Are you sure you want to permanently destroy all your data?" }, method: :delete,
                class: "btn btn-error mt-20 mb-3" %>
        <span class="font-bold text-sm">This action is not recoverable!</span>
    </div>
</div>

<h2 class="heading">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "mt-6", data: { turbo: false } }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mt-10">
        <%= f.label :password, "New password", class: "form-control label-text" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
                        placeholder: "Password #{"(#{@minimum_password_length} characters minimum)" if @minimum_password_length}", 
                        class: "form-control form-field block w-full" %>
    </div>

    <div class="mt-4">
        <%= f.label :password_confirmation, "Confirm new password", class: "form-control label-text" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password", 
                        class: "form-control form-field block w-full" %>
    </div>
    <%= f.submit resource.requires_magic_link? ? 'Add password to my account' : 'Change my password', class: "btn btn-primary block w-full mt-5" %>
<% end %>
